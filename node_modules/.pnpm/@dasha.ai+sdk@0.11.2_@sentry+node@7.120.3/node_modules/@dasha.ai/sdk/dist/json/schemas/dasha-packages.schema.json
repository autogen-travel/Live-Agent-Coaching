{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "type": {
            "$ref": "#/definitions/PackageContentType"
        },
        "packagesFolderPath": {
            "type": "string"
        },
        "entryPoint": {
            "type": "string"
        },
        "dependencies": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "locks": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/PackageLockDescription"
            }
        }
    },
    "required": [
        "dependencies",
        "type"
    ],
    "definitions": {
        "PackageLockDescription": {
            "type": "object",
            "properties": {
                "type": {
                    "$ref": "#/definitions/PackageContentType"
                },
                "version": {
                    "type": "string"
                },
                "packageContentId": {
                    "type": "string"
                }
            },
            "required": [
                "packageContentId",
                "type",
                "version"
            ]
        },
        "PackageContentType": {
            "enum": [
                "None",
                "Project",
                "DslLibrary",
                "AudioPack",
                "NluCollection",
                "NluSkill",
                "PhraseMap",
                "PhraseCollection",
                "PlaygroundComponent"
            ],
            "type": "string"
        }
    }
}
