{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "language": {
            "type": "string"
        },
        "formatVersion": {
            "type": "string"
        },
        "nlg": {
            "$ref": "#/definitions/PhrasesNlgConfig"
        },
        "nlu": {
            "$ref": "#/definitions/NluConfig"
        },
        "dialogue": {
            "$ref": "#/definitions/DialogueConfig"
        }
    },
    "required": [
        "dialogue",
        "formatVersion",
        "name",
        "nlg",
        "nlu"
    ],
    "definitions": {
        "PhrasesNlgConfig": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "phrases"
                    ]
                },
                "file": {
                    "type": "string"
                },
                "signatureFile": {
                    "type": "string"
                }
            },
            "required": [
                "file",
                "type"
            ]
        },
        "NluConfig": {
            "type": "object",
            "properties": {
                "language": {
                    "type": "string"
                },
                "skills": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "customIntents": {
                    "$ref": "#/definitions/CustomIntentsIncludeConfig"
                }
            },
            "required": [
                "language",
                "skills"
            ]
        },
        "CustomIntentsIncludeConfig": {
            "type": "object",
            "properties": {
                "file": {
                    "type": "string"
                }
            },
            "required": [
                "file"
            ]
        },
        "DialogueConfig": {
            "type": "object",
            "properties": {
                "file": {
                    "type": "string"
                },
                "view": {
                    "type": "string"
                }
            },
            "required": [
                "file"
            ]
        }
    }
}
